<div class="blocktitle">
    <h1>検索結果</h1>
</div>


<%#ホームアイコン%>
<%= link_to home_top_path do %>
  <%= image_tag "/images/home.png",{class: "homeicon"} %>
<% end %>
<br>

<div class="row">
    <% @rec.each do |data| %>
            <div class="col-12 col-md-6">
             <%= link_to recipes_details_path(id: data["id"]) do %>
                <div class="titlex">
                    <%= link_to_unless_current data["recipeTitle"]%>
                </div>
            <%end%>
                <%= link_to recipes_details_path(id: data["id"]) do %>
                    <div class="image">
                        <%= image_tag data["foodImageUrl"] %>
                    </div>
                <% end %>
                <div class="time">
                    <%= link_to_unless_current data["recipeIndication"]%>
                </div>
                <div class="cost">
                    <%= link_to_unless_current data["recipeCost"]%>
                </div>
            </div>
    <% end %>
</div>