<div class="blocktitle">
    <h1>レシピ詳細</h1>
</div>

<%#ホームアイコン%>
<%= link_to home_top_path do %>
  <%= image_tag "/images/home.png",{class: "homeicon"} %>
<% end %>
<br>
<br>

<div class="titley">
    <%= @det.recipeTitle %><br>
</div>

<div class="imagex">
    <%= image_tag @det.foodImageUrl %><br>
</div>

<div class = "ninbun">
材料【<%= @elements_recipeYield %>人分】<br>
</div>

<center>
    <table class = "tablex">
    <% @elements_recipeIngredient.each do |txt|%>
    <tr>
        <td><%= txt %>
        <% if data.shoppings.blank? %>
                <%= form_with(model: @shopping) do |form| %>
                    <%= form.hidden_field:recipe_id, value: data["id"] %>

                    <div class="actionsf">
                        <%= form.submit %>
                    </div>
                <% end %>
            <% else %>
                <%= image_tag "/images/hoku.png",{class: "hosi"} %>
            <% end %>
        </td>
    </tr>
    <% end %>
    </table>
</center>

<div class="syousai">
    <%= link_to "詳しいレシピはこちらから", @det.recipeUrl, target: :_blank %>
</div>

