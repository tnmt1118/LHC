<p id="notice"><%= notice %></p>

<h1>Favorites</h1>

<%#18行目までホームボタン%>
<style>
.example{
    display: inline-block;
}
.example img{
    display: block;
}
</style>
<div class="relative">
  <a class="homeicon" href="http://localhost:3000/" class="example">
    <img class="absolute" width="50" src="images/home.png" alt="home">
  </a>
</div>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Favorite</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= favorite.user_id %></td>
        <td><%= favorite.favorite %></td>
        <td><%= link_to 'Show', favorite %></td>
        <td><%= link_to 'Edit', edit_favorite_path(favorite) %></td>
        <td><%= link_to 'Destroy', favorite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Favorite', new_favorite_path %>
