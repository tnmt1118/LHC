<p id="notice"><%= notice %></p>
<div class="blocktitle">
<h1>買い物リスト</h1>
</div>

<style>
.example{
    display: inline-block;
}
.example img{
    display: block;
}
</style>
<div class="relative">
  <a class="homeicon" href="http://localhost:3000/" class="example">
    <img class="absolute" width="50" src="images/home.png" alt="home">
  </a>
</div>


<table>
  <thead>
    <tr>
      <th class="blockitiran">食材一覧</th>

      <%#><th>Buy</th>
      <th>User</th></%>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shoppings.each do |shopping| %>
      <tr>
        <td class="blockitiran1"><%= shopping.buy %></td>
        <td><%= shopping.user_id %></td>
        <td class="blockitiran1"><%= link_to '詳細', shopping %></td>
        <td class="blockitiran1"><%= link_to '編集', edit_shopping_path(shopping) %></td>
        <td class="blockitiran1"><%= link_to '削除', shopping, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

