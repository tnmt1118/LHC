<p id="notice"><%= notice %></p>
<div class="blocktitle">
<h1>ブロック</h1>
</div>

<style>
.example{
    display: inline-block;
}
.example img{
    display: block;
}
</style>
<div class="relative">
  <a class="homeicon" href="http://localhost:3000/" class="example">
    <img class="absolute" width="50" src="images/home.png" alt="home">
  </a>
</div>

<table>
  <thead>
    <tr>
      <th class="blockitiran">ブロック一覧</th>
      <!--th>User</th-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blocks.each do |block| %>
      <tr>
        <td class="blockitiran1"><li><%= block.block %></li></td>
        <td><%= block.user_id %></td>
        <td class="blockitiran1"><%= link_to '詳細', block %></td>
        <td class="blockitiran1"><%= link_to '編集', edit_block_path(block) %></td>
        <td class="blockitiran1"><%= link_to '削除', block, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'ブロック追加', new_block_path %>

